FROM node:18-alpine

WORKDIR /app

# Declare build arguments that Coolify may pass
ARG NODE_ENV
ARG PORT
ARG DB_HOST
ARG DB_PORT
ARG DB_NAME
ARG DB_USER
ARG DB_PASSWORD
ARG JWT_SECRET
ARG JWT_REFRESH_SECRET
ARG FRONTEND_URL
ARG SUPER_ADMIN_EMAIL
ARG SUPER_ADMIN_PASSWORD
ARG WHATSAPP_API_URL
ARG COOLIFY_URL
ARG COOLIFY_FQDN
ARG SERVICE_URL_BACKEND
ARG SERVICE_FQDN_BACKEND

# Install dependencies
COPY package*.json ./
RUN npm ci --only=production

# Copy source code
COPY . .

# Expose port
EXPOSE 5000

# Start command
CMD ["npm", "start"]
